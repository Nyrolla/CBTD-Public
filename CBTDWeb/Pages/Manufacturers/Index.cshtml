@page
@model CBTDWeb.Pages.Manufacturers.IndexModel

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Manufacturer List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Upsert"  asp-route-id ="0" class="btn btn-primary">
                <i class="bi bi-plus-circle"> </i> Create New Manufacturer
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    &nbsp;
                </th>
            </tr>
        </thead>
        <tbody>
            <!--Loop though to create each row-->
            @foreach (var obj in Model.objManufacturerList)
            {
        
            <tr>
                <td style="width: 50%">@obj.Name</td>
                <td style="width: 20%">
                    <div class="w-75 btn-group role="group"">
                        <a asp-page="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                             <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div> <!--Close of bootstrap container-->
